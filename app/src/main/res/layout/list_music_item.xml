<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_music_item_height"
    app:cardCornerRadius="50dp"
    android:layout_marginBottom="@dimen/margin_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorItemList"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMusicItem"
            android:layout_width="@dimen/list_music_item_image_side"
            android:layout_height="@dimen/list_music_item_image_side"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginStart="@dimen/margin_20dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/list_music_item_image_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameMusicItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/music_name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvArtistMusicItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/singer"
                android:textColor="@color/colorPrimaryText" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>